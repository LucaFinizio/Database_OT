package com.example.ot.dao;

import org.springframework.stereotype.Repository;

import com.example.ot.entity.Countries;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;


@Repository
public interface CountriesDao extends CrudRepository<Countries, String>{
	@Query("SELECT c.COUNTRY_NAME, r.REGION_NAME FROM COUNTRIES as c JOIN \"\r\n" + 
			"+ \"REGIONS as r ON c.REGION_ID=r.REGION_ID AND c.REGION_ID = 1")
	public List<Countries> findAllByRegionsId(Integer region_id);
}
